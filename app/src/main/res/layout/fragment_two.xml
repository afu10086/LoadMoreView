<?xml version="1.0" encoding="utf-8"?>
<com.lidaofu.www.view.ScrollMoreView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lidaofu.www.view.ListMoreView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.lidaofu.www.view.ListMoreView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="继续滑动，查看更多"
            android:textSize="18sp" />

    </LinearLayout>


</com.lidaofu.www.view.ScrollMoreView>



